<div class="row">
    <div class="col-8"><h2>Lista de membros</h2></div>
    <div class="col-4"><input type="text" name="pesqNome" placeholder="Pesquisar pelo nome" class="form-control"><button class="inline btn">..</button></div>
</div>
<hr>
<a href="/membros/adMembro"><button class="btn btn-primary">Cadastrar novo</button></a>

{{#each membros}}
<div class="card mt-2 p-0">
    <div class="card-body p-3">
       <div class="container">
        <div class="row">
            <div class="col-2 p-3 lead">
                
                 <h3>FOTO</h3>
            </div>
            <div class="col-6">
                 <h3>{{nome}}</h3>
                 <div class="lead">{{funcao}}</div>
            </div>
            <div class="col-4 text-center p-3"> <p class="my-0 p-0">Res: {{bairro}}</p> <a href="/membros/detalhMembro/{{_id}}">Mais detalhes</a>
            <br>
            {{!-- <a href="/ofertas/addnova/{{_id}}" class="btn btn-dark">Ad Oferta</a> --}}
            </div>
            
        </div>
       </div>
    </div>
</div>


{{else}}
<h3>Nenhum membro registrado!</h3>
{{/each}}