<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h2>Editar dados de Usuario</h2>
            
{{usuario}}
            <form action="/user/editarSalvar" method="post">
                <label for="nome">Nome:</label>
                <input type="text" name="nome" value="{{usuario.nome}}" class="form-control">
                <label for="usernome">Usuario:</label>
                <input type="text" name="usernome" value="{{usuario.usernome}}" class="form-control">
                <label for="senha">Senha:</label>
                <input type="password" name="senha" value="{{usuario.senha}}" class="form-control">
                <label for="imagem">Imagem:</label>
                <input type="text" name="imagem" value="{{usuario.imagem}}" class="form-control">
                <label for="background">Background:</label>
                <input type="text" name="background" value="{{usuario.background}}" class="form-control">

                <button type="submit" class="btn btn-primary mt-3">Criar usuario</button>
            </form>
        </div>
    </div>
</div>